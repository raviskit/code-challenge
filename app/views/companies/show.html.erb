<div class='container-fluid'>
  <div>
    <p>
      <%= link_to 'Home', companies_path, class: 'btn btn-success pull-right'%>
    </p>
  </div>


    <h3> Company Details:</h3>
      <div id='cmpny-margin'>
        <div class='custom-well'>
          <div class="row">
            <div class='col-md-10'></div>
            <div class='col-md-2'>
              <%= link_to 'Edit', edit_company_path, class: 'btn btn-success pull-right' %>
              <%= link_to 'Delete', @company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success pull-right' %>
            </div>
          </div>
          <div class="row">
            <h2><%= @company.name.capitalize %> |</h2>  <h4 id="city_and_state"><%= @company.city.capitalize %>, <%= @company.state.capitalize %></h4>
          </div>
          <br />
          <h6><%= @company.description %></h6>
        </div>
      </div>

    <h3> Founders Details:</h3>
      <div id='cmpny-margin'>
        <div class='custom-well'>
          <div class="row">
            <div class='col-md-10'></div>
            <%= link_to 'Add Founder', new_company_founder_path(@company), class: 'btn btn-success pull-right' %>
          </div>

          <% @company.founders.each do |founder| %>
            <div class="row">
              <div class="col-md-4">
                <%= "#{founder.full_name} : #{founder.title}" %>
              </div>
            </div><br />
          <% end %>
        </div>
      </div>

    <h3> Tags:</h3>
      <div id='cmpny-margin'>
        <div class='custom-well'>
          <div class="row">
            <div class='col-md-10'></div>
            <%= link_to 'Add Tags', new_company_tag_path(@company), class: 'btn btn-success pull-right' %>
          </div>

          <% @company.tags.each do |tag| %>
            <div class="row">
              <div class="col-md-4">
                <%= tag.name %>
              </div>
            </div><br />
          <% end %>
        </div>
      </div>

</div>
