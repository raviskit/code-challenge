
<div class="jumbotron">
  <%= form_for @company, html: { class: 'form-horizontal'} do |f|%>
    <%= f.fields_for :tags, @tag do |g| %>
      <div class="form-group">
        <div class="row">
          <%= g.label :name, 'Founder Name', class: 'control-label required' %>
          <div class="col-sm-10">
            <%= g.text_field :name, maxlength: '100', placeholder: 'Enter the tag name'%>
          </div>
        </div>
        <br />
      </div>
    <% end %>
    <%= f.submit 'Submit', class: 'btn btn-success pull-left'%>
  <% end %>
</div>